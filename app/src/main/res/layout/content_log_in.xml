<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_log_in"
    tools:context="com.example.macdev.parserdemo2.LogInActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLogIn"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerHorizontal="true"
        android:text="User Login" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextUserNameLogin"
        android:layout_below="@+id/textViewLogIn"
        android:inputType="textEmailAddress"
        android:hint="User Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextUserPasswordLogIn"
        android:hint="Password"
        android:layout_below="@+id/editTextUserNameLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/buttonLogInNow"
        android:layout_below="@+id/editTextUserPasswordLogIn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Account"
        android:id="@+id/buttonCreateNewAccount"
        android:layout_below="@+id/buttonLogInNow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

    <!--   <com.facebook.login.widget.LoginButton
           android:id="@+id/login_button"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="30dp"
           android:layout_marginBottom="30dp"
           android:layout_below="@+id/buttonCreateNewAccount"
           />
   -->
       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Login To Facebook"
           android:id="@+id/buttonFaceBookLogin"
           android:layout_below="@+id/buttonCreateNewAccount"
           android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login To Twitter"
        android:id="@+id/buttonTwitterLogin"
        android:layout_below="@+id/buttonFaceBookLogin"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
